# Smart Dashboard - Production Environment Variables Template
# Copy this file to .env.production for production deployment

# =============================================================================
# Supabase Configuration (REQUIRED)
# =============================================================================

NEXT_PUBLIC_SUPABASE_URL=your_production_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_production_supabase_service_role_key
SUPABASE_URL=your_production_supabase_project_url
SUPABASE_ANON_KEY=your_production_supabase_anon_key

# =============================================================================
# Production Authentication
# =============================================================================

NEXT_PUBLIC_SUPABASE_REDIRECT_URL=https://your-production-domain.com

# =============================================================================
# Production Configuration
# =============================================================================

NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
PORT=3000

# =============================================================================
# Security Headers (OPTIONAL - for advanced deployments)
# =============================================================================

# Content Security Policy customization
# CSP_CUSTOM_DOMAINS=https://your-trusted-domain.com

# CORS allowed origins
# CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com